@model TortenkreationSHSBlog.Models.Post

@{
    ViewData["Title"] = "Create post";
}

<div class="section no-pad-bot" id="index-banner">
    <div class="container">
        <h2>Neuer Blogpost</h2>
        <form method="post" asp-action="Create" asp-controller="Posts">
            <div class="row">
                <div class="input-field">
                    <input id="title" type="text" class="validate" asp-for="@Model.Title" required>
                    <label for="title">Titel</label>
                </div>
            </div>
            <div class="row">
                <textarea asp-for="@Model.Content" id="content-textarea"></textarea>
            </div>
            <div class="row">
                <p>
                    <label>
                        <input type="checkbox" asp-for="@Model.IsPublished" />
                        <span>Veröffentlichen</span>
                    </label>
                </p>
            </div>
            <div class="row">
                <button class="btn waves-effect waves-light" type="submit" name="action">Speichern</button>
                <a class="btn waves-effect waves-light" asp-route="list-posts">Abbrechen</a>
            </div>
        </form>
        <br><br>
    </div>
</div>


<script>
    var simplemde = new SimpleMDE({
        element: document.getElementById("content-textarea"),
        hideIcons: ["guide"]
    });
</script>
