@model TortenkreationSHSBlog.Models.Post

@{
    ViewData["Title"] = "Edit post";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
<script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>

<h1>@ViewData["Title"]</h1>

<form method="post" asp-action="Edit" asp-controller="Posts">
    <div>
        <label>Titel</label>
        <input type="text" asp-for="@Model.Title" required />
    </div>
    <div>
        <label>Inhalt</label>
        <textarea asp-for="@Model.Content" rows="10" id="content-textarea"></textarea>
    </div>
    <div>
        <input type="checkbox" asp-for="@Model.IsPublished"> Veröffentlichen
    </div>
    <div>
        <button type="submit">Speichern</button>
        <a asp-route="list-posts" role="button">Abbrechen</a>
    </div>
</form>

<script>
    var simplemde = new SimpleMDE({ element: document.getElementById("content-textarea") });
</script>


