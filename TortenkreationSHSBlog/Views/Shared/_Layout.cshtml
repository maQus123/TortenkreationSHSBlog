<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="/mstile-144x144.png">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/css/materialize.min.css" rel="stylesheet">
    <link href="~/css/styles.css" rel="stylesheet">
    <script src="~/js/jquery.min.js" type="text/javascript"></script>
    <script src="~/js/materialize.min.js" type="text/javascript"></script>
    <script src="~/js/scripts.js" type="text/javascript"></script>
</head>
<body>
    <nav class="pink lighten-3" role="navigation">
        <div class="nav-wrapper container">
            <a id="logo-container" asp-route="home" class="brand-logo white-text thin">Tortenkreation</a>
            <ul class="right hide-on-med-and-down">
                <li><a asp-route="home" class="white-text">Home</a></li>
                <li><a asp-route="list-pictures" class="white-text">Tortengalerie</a></li>
                <li><a asp-route="about-me" class="white-text">Über mich</a></li>
                @if (User.Identity.IsAuthenticated) {
                    <li><a asp-route="admin" class="white-text">Verwaltung</a></li>
                }
            </ul>
            <ul id="nav-mobile" class="sidenav">
                <li><a asp-route="home" class="grey-text text-darken-1 waves-effect">Home</a></li>
                <li><a asp-route="list-pictures" class="grey-text text-darken-1 waves-effect">Tortengalerie</a></li>
                <li><a asp-route="about-me" class="grey-text text-darken-1 waves-effect">Über mich</a></li>
                @if (User.Identity.IsAuthenticated) {
                    <li><a asp-route="admin" class="grey-text text-darken-1 waves-effect">Verwaltung</a></li>
                }
            </ul>
            <a href="#" data-target="nav-mobile" class="sidenav-trigger"><i class="material-icons">menu</i></a>
        </div>
    </nav>
    @RenderBody()
    <footer class="page-footer teal">
        <div class="container">
            <div class="row">
                <div class="col l6 s12">
                    <h5 class="white-text">Company Bio</h5>
                    <p class="grey-text text-lighten-4">We are a team of college students working on this project like it's our full time job. Any amount would help support and continue development on this project and is greatly appreciated.</p>
                </div>
                <div class="col l3 s12">
                    <h5 class="white-text">Settings</h5>
                    <ul>
                        <li><a class="white-text" href="#!">Link 1</a></li>
                        <li><a class="white-text" href="#!">Link 2</a></li>
                        <li><a class="white-text" href="#!">Link 3</a></li>
                        <li><a class="white-text" href="#!">Link 4</a></li>
                    </ul>
                </div>
                <div class="col l3 s12">
                    <h5 class="white-text">Connect</h5>
                    <ul>
                        <li><a class="white-text" href="#!">Link 1</a></li>
                        <li><a class="white-text" href="#!">Link 2</a></li>
                        <li><a class="white-text" href="#!">Link 3</a></li>
                        <li><a class="white-text" href="#!">Link 4</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container">
                © 2018 Copyright Tortenkreation SHS
            </div>
        </div>
    </footer>
</body>
</html>
