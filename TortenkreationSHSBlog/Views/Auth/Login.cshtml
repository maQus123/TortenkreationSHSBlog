@model TortenkreationSHSBlog.Models.User

@{

}

<div class="row">
    <div class="col s6 offset-s3">
        <h5 id="title">Login</h5>
        <form method="post" asp-action="Login" asp-controller="Auth">
            <div class="input-field" id="username">
                <input asp-for="@Model.Username" type="text" class="validate">
                <label for="username">Username</label>
            </div>
            <div class="input-field" id="password">
                <input asp-for="@Model.Password" type="password" class="validate">
                <label for="password">Password</label>
            </div>
            <button class="waves-effect waves-light btn" type="submit">Login</button>
        </form>
    </div>
</div>