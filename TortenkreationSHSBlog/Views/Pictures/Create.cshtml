@model TortenkreationSHSBlog.Models.CreatePictureViewModel

@{
    ViewData["Title"] = "Neues Foto";
}

<br />
<div class="row">
    <div class="col s12 m8 l8 offset-m2 offset-l2">
        <h4>@ViewData["Title"]</h4>
    </div>
</div>
<form method="post" asp-action="Create" asp-controller="Pictures" enctype="multipart/form-data">
    <div class="row">
        <div class="input-field col s12 m8 l8 offset-m2 offset-l2">
            <input type="text" asp-for="@Model.Title" data-length="50" required>
            <label for="Title">Titel</label>
            <span asp-validation-for="@Model.Title"></span>
        </div>
    </div>
    <div class="row">
        <div class="input-field col s12 m8 l8 offset-m2 offset-l2">
            <select asp-for="@Model.Occasion" asp-items="Html.GetEnumSelectList<Occasion>()" required>
                <option selected="selected" disabled>Bitte wählen</option>
            </select>
            <label>Anlass</label>
            <span asp-validation-for="@Model.Occasion"></span>
        </div>
    </div>
    <div class="row">
        <div class="input-field file-field col s12 m8 l8 offset-m2 offset-l2">
            <div class="btn waves-effect waves-light pink lighten-2">
                Foto
                <input type="file" asp-for="@Model.File" required>
            </div>
            <div class="file-path-wrapper">
                <input class="file-path" type="text">
            </div>
            <span asp-validation-for="@Model.File"></span>
        </div>
    </div>
    <div class="row">
        <div class="col s12 m8 l8 offset-m2 offset-l2">
            <p>
                <label>
                    <input type="checkbox" asp-for="@Model.IsPublished" />
                    <span>Veröffentlichen</span>
                </label>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col s12 m8 l8 offset-m2 offset-l2">
            <button class="btn waves-effect waves-light pink" type="submit" name="action">Speichern</button>
            <a class="btn waves-effect waves-light pink lighten-1" asp-route="list-pictures">Abbrechen</a>
        </div>
    </div>
</form>