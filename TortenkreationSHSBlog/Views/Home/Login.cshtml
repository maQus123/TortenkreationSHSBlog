@model TortenkreationSHSBlog.Models.User

@{

}

<br />
<div class="row">
    <div class="col s12 m6 l4 offset-m3 offset-l4">
        <div class="card">
            <div class="card-content">
                <form method="post" asp-action="Login" asp-controller="Home">
                    <h4 class="center">Login</h4>
                    <div class="input-field">
                        <label for="Username">
                            Name
                        </label>
                        <input asp-for="@Model.Username" type="text" autofocus="autofocus" required="required">
                        <span asp-validation-for="@Model.Username"></span>
                    </div>
                    <div class="input-field">
                        <label for="Password">
                            Passwort
                        </label>
                        <input asp-for="@Model.Password" type="password" required="required">
                        <span asp-validation-for="@Model.Password"></span>
                    </div>
                    <button class="btn waves-effect waves-light pink lighten-2" type="submit">Login</button>
                </form>
            </div>
        </div>
    </div>
</div>